<?xml version="1.0" encoding="UTF-8"?>
<!-- NXT METADATA FOR THE LANCS-OASIS CORPUS.
     

  Colin Matheson               26.11.04

-->
<corpus 
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:noNamespaceSchemaLocation="schema/meta-standoff.xsd" 
   description="Lancs OASIS" 
   id="lancsoasis"
   links="ltxml1"
   type="standoff">
     <!--******************************************************************
         GENERIC CORPUS INFORMATION 
         names of attributes that are globally used in the corpus for
         ID, start and end times. Note that the types and legal
         appearance / non-appearance of all of these attributes is
         set. IDs are free strings and start and end times are
         numbers. Time-aligned elements must have all three
         attributes; structural-layer elements must have ID and may
         have start and end times; featural-layer elements must have
         id but must not have start and end times. 
    ******************************************************************-->
    <reserved-attributes>
        <identifier name="id"/>
        <starttime name="starttime"/>
        <endtime name="endtime"/>
        <agentname name="who"/>
        <observationname name="obs"/>
    </reserved-attributes>
    <reserved-elements>
        <pointername name="nite:pointer"/>
        <child name="nite:child"/>
        <stream name="nite:root"/>
    </reserved-elements>

    <documents/>
    <observation-variables/>
    <signals/>

   <!--*************************************************************
       AGENTS - designating the speakers
    *************************************************************-->
   <agents>
        <agent name="a" desc="operator"/> 
        <agent name="b" desc="caller"/> 
        <agent name="x" desc="third-party"/>
   </agents>

   <!--*************************************************************
       CODINGS - transcription and annotation for each observation
    *************************************************************-->
    <codings path=".">

         <!--*************************************************************
              AGENT CODINGS - for each speaker separately
          *************************************************************-->
        <agent-codings>
            <!-- BASE LEVEL ORTHOGRAPHY -->
            <coding-file name="unit">
                <structural-layer name="terminal-layer">
                    <code name="sil">
                        <attribute name="BTlength" value-type="string"/>
                        <attribute name="uncertainty" value-type="enumerated">
                            <value>yes</value>
                            <value>no</value>
                        </attribute>
                    </code>
                    <code name="noi">
                        <attribute name="description" value-type="string"/>
                        <attribute name="uncertainty" value-type="enumerated">
                            <value>yes</value>
                            <value>no</value>
                        </attribute>
                    </code>
                    <code name="stdzcode">
                        <attribute name="description" value-type="string"/>
                    </code>
                    <code name="gap">
                        <attribute name="uncertainty" value-type="enumerated">
                            <value>yes</value>
                            <value>no</value>
                        </attribute>
                    </code>
                    <code name="partword" text-content="true">
                        <attribute name="uncertainty" value-type="enumerated">
                            <value>yes</value>
                            <value>no</value>
                        </attribute>
                        <attribute name="completion" value-type="string"/>
                    </code>
                    <code name="phonword" text-content="true"/>
                    <code name="comment">
                        <attribute name="uncertainty" value-type="enumerated">
                            <value>yes</value>
                            <value>no</value>
                        </attribute>
                        <attribute name="BTtype" value-type="enumerated">
                            <value>in_line</value>
                            <value>full_line</value>
                        </attribute>
                        <attribute name="BTlinenum" value-type="string"/>
                        <attribute name="text" value-type="string"/>
                    </code>
                    <code name="word" text-content="true">
                        <attribute name="uncertainty" value-type="enumerated">
                            <value>yes</value>
                            <value>no</value>
                        </attribute>
                    </code>
                    <code name="pncode">
                        <attribute name="type" value-type="enumerated">
                            <value>business</value>
                            <value>name</value>
                            <value>surname</value>
                            <value>letter</value>
                            <value>time</value>
                            <value>road</value>
                            <value>town</value>
                            <value>country</value>
                            <value>other_place</value>
                            <value>other</value>
                            <value>unclassified</value>
                            <value>none</value>
                        </attribute>
                    </code>
                    <code name="lcode"/>
                    <code name="num"/>
                    <code name="bcanchor">
                        <pointer number="1" role="bc" target="lturn-layer"/>
                    </code>
                </structural-layer>
            </coding-file>
            <!--******************************************************-->
            <!-- INDEXING PROPER NOUNS AND DIGITS -->
            <!-- Keys for replacing the orthographic proper noun
                 and digit codes don't come with the public release,
                 but for those who have them, these stand-off layers
                 for finding the proper nouns and digits are useful.
            -->
            <!-- STAND-OFF PROPER NOUNS -->
            <coding-file name="propernoun">
                <structural-layer name="propernouns" points-to="terminal-layer">
                    <code name="propernoun">
                        <attribute name="type" value-type="enumerated">
                            <value>business</value>
                            <value>name</value>
                            <value>surname</value>
                            <value>letter</value>
                            <value>time</value>
                            <value>road</value>
                            <value>town</value>
                            <value>country</value>
                            <value>other_place</value>
                            <value>other</value>
                            <value>unclassified</value>
                            <value>none</value>
                        </attribute>
                        <attribute name="uncertainty" value-type="enumerated">
                            <value>yes</value>
                            <value>no</value>
                        </attribute>
                    </code>
                </structural-layer>
            </coding-file>
            <!-- STAND-OFF DIGITS -->
            <coding-file name="digit">
                <structural-layer name="digits" points-to="terminal-layer">
                    <code name="digit">
                        <attribute name="representation" value-type="string"/>
                    </code>
                </structural-layer>
            </coding-file>
            <!--******************************************************-->
            <!-- LANCASTER DIALOGUE STRUCTURE -->
            <coding-file name="lturn">
                <structural-layer name="lturn-layer" points-to="utt-layer">
                    <code name="lturn">
                        <attribute name="type" value-type="enumerated">
                            <value>backchannel</value>
                        </attribute>
                    </code>
                </structural-layer>
                <structural-layer name="utt-layer" points-to="lmove-layer">
                    <code name="utt"/>
                 </structural-layer>
                <structural-layer name="lmove-layer" points-to="terminal-layer">
                    <code name="segment">                        
                        <attribute name="secondary-act" value-type="enumerated">
                            <value>hold</value>
                            <value>abandon</value>
                            <value>bye</value>
                        </attribute>
                        <attribute name="alternative" value-type="enumerated">
                            <value>yes</value>
                            <value>no</value>
                        </attribute>
                        <attribute name="disc" value-type="enumerated">
                            <value>yes</value>
                        </attribute>
                        <attribute name="cont" value-type="enumerated">
                            <value>yes</value>
                        </attribute>
                        <attribute name="type" value-type="enumerated">
                            <value>frag</value>
                            <value>dm</value>
                            <value>decl</value>
                            <value>q_yn</value>
                            <value>q_wh</value>
                            <value>yes</value>
                            <value>no</value>
                            <value>imp</value>
                        </attribute>
                        <attribute name="sp-act" value-type="enumerated">
                            <value>accept</value>
                            <value>ackn</value>
                            <value>answ</value>
                            <value>answElab</value>
                            <value>appreciate</value>
                            <value>bye</value>
                            <value>complete</value>
                            <value>confirm</value>
                            <value>correct</value>
                            <value>correctSelf</value>
                            <value>direct</value>
                            <value>directElab</value>
                            <value>echo</value>
                            <value>exclaim</value>
                            <value>expressOpinion</value>
                            <value>expressPossibility</value>
                            <value>expressRegret</value>
                            <value>expressWish</value>
                            <value>greet</value>
                            <value>hold</value>
                            <value>identifySelf</value>
                            <value>inform</value>
                            <value>informIntent</value>
                            <value>init</value>
                            <value>negate</value>
                            <value>offer</value>
                            <value>pardon</value>
                            <value>raiseIssue</value>
                            <value>refer</value>
                            <value>refuse</value>
                            <value>reqDirect</value>
                            <value>reqInfo</value>
                            <value>reqModal</value>
                            <value>selfTalk</value>
                            <value>suggest</value>
                            <value>thank</value>
                            <value>thirdParty</value>
                            <value>unclassifiable</value>
                            <value>uninterpretable</value>
                        </attribute>
                    </code>
                 </structural-layer>
            </coding-file>
        </agent-codings>
    <!--*************************************************************
         INTERACTION CODINGS - drawing from across the agents
    *************************************************************-->
        <interaction-codings>
            <!-- DIAL STRUCTURE GIVING THE TURN ORDER -->
            <coding-file name="ldial">
               <structural-layer name="dialogue-layer" points-to="lturn-layer">
                    <code name="turn_pointer"/>
                </structural-layer>
            </coding-file>
            <!-- SPEAKER OVERLAPS -->
            <coding-file name="overlap">
                <structural-layer name="top-overlap" points-to="agent-overlap">
                    <code name="overlap"/>
                </structural-layer>
                <structural-layer name="agent-overlap" points-to="terminal-layer">
                    <code name="overlapa"/>
                    <code name="overlapb"/>
                    <code name="overlapx"/>
                </structural-layer>
            </coding-file>
        </interaction-codings>

    </codings>
    <!--*************************************************************
       CALLABLE PROGRAMS - a registry of programs that work on this corpus 
    *************************************************************-->
    <callable-programs>
       <callable-program description="Tailored Viewer" name="OASISViewer">
            <required-argument name="corpus" type="corpus"/>
            <required-argument name="observation" type="observation"/>
            <required-argument name="lancsda" default=""/>
        </callable-program>
    </callable-programs>

